{
  "name": "@teamb/capstonemock",
  "version": "0.1.0",
  "description": "Team B CapstoneMock project",
  "private": true,
  "workspaces": [
    "src/web-admin",
    "src/web-user",
    "src/api",
    "src/mobile",
    "src/shared",
    "src/db"
  ],
  "packageManager": "pnpm@10.18.0",
  "scripts": {
    "dbsetup": "concurrently \"pnpm --filter @teamb/db init:db\" \"pnpm --filter @teamb/db generate:simple\" \"pnpm --filter @teamb/db push:force\"",
    "dev": "concurrently \"pnpm --filter @teamb/web-admin dev\" \"pnpm --filter @teamb/web-user dev\"",
    "dev:admin": "pnpm --filter @teamb/web-admin dev",
    "dev:user": "pnpm --filter @teamb/web-user dev",
    "build": "pnpm -r build",
    "start": "concurrently \"pnpm --filter @teamb/web-admin start\" \"pnpm --filter @teamb/web-user start\"",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
