{
  "name": "@teamb/db",
  "version": "1.0.0",
  "description": "Team B database schema overlay and local extensions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "init:db": "tsx src/initDb.ts",
    "build": "tsc -p tsconfig.json",
    "dev": "tsc --watch",
    "generate": "node scripts/generate-migration.js",
    "generate:simple": "npx drizzle-kit generate",
    "migrate": "npx drizzle-kit migrate",
    "gen-migrate": "npx drizzle-kit generate; npx drizzle-kit migrate",
    "push": "drizzle-kit push",
    "push:force": "drizzle-kit push --force",
    "studio": "drizzle-kit studio",
    "promote": "node src/scripts/promote-schema.js",
    "seed": "tsx src/seed.ts",
    "seed:accounts": "tsx src/seed_accounts.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.19.19",
    "@types/pg": "^8.11.5",
    "drizzle-kit": "^0.31.6",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5",
    "vite-plugin-node-polyfills": "^0.24.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "default": "./dist/schemas/index.js"
    },
    "./overlays": {
      "types": "./dist/overlays/index.d.ts",
      "default": "./dist/overlays/index.js"
    }
  }
}
