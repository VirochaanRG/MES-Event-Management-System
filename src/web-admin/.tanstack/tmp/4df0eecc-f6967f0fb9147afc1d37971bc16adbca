import { createFileRoute, useNavigate } from "@tanstack/react-router";
import { useEffect, useState } from "react";
import { getCurrentUser, AuthUser, logout } from "@/lib/auth";
import ProtectedTeamPortal from "@/components/ProtectedTeamPortal";
import AdminLayout from "@/components/AdminLayout";
import RequireRole from "@/components/RequireRole";
import {
  Search,
  Filter,
  ArrowLeft,
  Download,
  X,
  Info,
  Users,
  CheckCircle2,
  AlertCircle,
} from "lucide-react";

interface Form {
  id: number;
  name: string;
  description: string | null;
  createdAt: string;
}

interface Question {
  id: number;
  formId: number;
  questionType: string;
  questionTitle: string | null;
  optionsCategory: string | null;
  qorder: number;
}

interface Submission {
  userId: string;
  submittedAt: string;
  answers: {
    questionId: number;
    questionTitle: string | null;
    questionType: string;
    qorder: number;
    answer: string;
  }[];
}

interface AnalyticsData {
  form: Form;
  submissions: Submission[];
  totalSubmissions: number;
}

interface FilterCondition {
  questionId: number;
  questionTitle: string;
  values: string[];
  operator: "AND" | "OR";
}

function AdvancedAnalyticsPageContent() {
  const [currentUser, setCurrentUser] = useState<AuthUser | null>(null);
  const [isLoading, setIsLoading] = useState(true);
  const [analyticsData, setAnalyticsData] = useState<AnalyticsData | null>(
    null,
  );
  const [questions, setQuestions] = useState<Question[]>([]);
  const [filterQuery, setFilterQuery] = useState("");
  const [parsedFilters, setParsedFilters] = useState<FilterCondition[]>([]);
  const [filteredSubmissions, setFilteredSubmissions] = useState<Submission[]>(
    [],
  );
  const [showHelp, setShowHelp] = useState(false);
  const navigate = useNavigate();
  const { analyticsId } = Route.useParams();

  useEffect(() => {
    const initAuth = () => {
      const sessionUser = getCurrentUser("admin");
      if (sessionUser) {
        if (sessionUser.roles && sessionUser.roles.includes("admin")) {
          setCurrentUser(sessionUser);
        } else {
          console.error("User does not have admin role");
          logout("admin");
          navigate({ to: "/" });
        }
      } else {
        navigate({ to: "/" });
      }
      setIsLoading(false);
    };

    initAuth();
  }, [navigate]);

  useEffect(() => {
    if (currentUser && analyticsId) {
      fetchAnalyticsData();
      fetchQuestions();
    }
  }, [currentUser, analyticsId]);

  useEffect(() => {
    if (analyticsData) {
      applyFilters();
    }
  }, [parsedFilters, analyticsData]);

  const fetchAnalyticsData = async () => {
    try {
      const response = await fetch(
        `http://localhost:3124/api/forms/${analyticsId}/answers`,
      );
      const data = await response.json();
      if (data.success) {
        setAnalyticsData(data.data);
        setFilteredSubmissions(data.data.submissions);
      }
    } catch (error) {
      console.error("Failed to fetch analytics data:", error);
    }
  };

  const fetchQuestions = async () => {
    try {
      const response = await fetch(
        `http://localhost:3124/api/forms/${analyticsId}/questions`,
      );
      const data = await response.json();
      if (data.success) {
        setQuestions(data.data);
      }
    } catch (error) {
      console.error("Failed to fetch questions:", error);
    }
  };

  const parseFilterQuery = (query: string): FilterCondition[] => {
    if (!query.trim()) return [];

    const filters: FilterCondition[] = [];
    // Match patterns like Q1:value, Q2:"multi word value", or Q1:1,2,3
    const regex = /Q(\d+):((?:"[^"]*"|[^,\s]+)(?:,(?:"[^"]*"|[^,\s]+))*)/gi;
    let match;

    while ((match = regex.exec(query)) !== null) {
      const questionOrder = parseInt(match[1]);
      const question = questions.find((q) => q.qorder === questionOrder);

      if (question) {
        // Parse comma-separated values, handling quoted strings
        const valueString = match[2];
        const values = valueString
          .split(",")
          .map((v) => v.trim().replace(/^"|"$/g, ""))
          .filter(Boolean);

        filters.push({
          questionId: question.id,
          questionTitle:
            question.questionTitle || `Question ${question.qorder}`,
          values,
          operator: "AND", // Default to AND, can be extended for OR
        });
      }
    }

    return filters;
  };

  const handleFilterChange = (query: string) => {
    setFilterQuery(query);
    const filters = parseFilterQuery(query);
    setParsedFilters(filters);
  };

  const applyFilters = () => {
    if (!analyticsData || parsedFilters.length === 0) {
      setFilteredSubmissions(analyticsData?.submissions || []);
      return;
    }

    const filtered = analyticsData.submissions.filter((submission) => {
      // All filter conditions must be met (AND logic between different questions)
      return parsedFilters.every((filter) => {
        const answer = submission.answers.find(
          (a) => a.questionId === filter.questionId,
        );

        if (!answer) return false;

        const question = questions.find((q) => q.id === filter.questionId);

        // Handle multi_select specially
        if (question?.questionType === "multi_select") {
          // Parse the {1,2,3} format
          const selectedValues = answer.answer
            .replace(/[{}]/g, "")
            .split(",")
            .map((v) => v.trim())
            .filter(Boolean);

          // Check if any of the filter values are in the selected values (OR logic within same question)
          return filter.values.some((filterValue) =>
            selectedValues.includes(filterValue),
          );
        }

        // For other question types, check if answer matches any of the filter values (OR logic within same question)
        return filter.values.some(
          (filterValue) =>
            answer.answer.toLowerCase() === filterValue.toLowerCase(),
        );
      });
    });

    setFilteredSubmissions(filtered);
  };

  const clearFilter = (questionId: number) => {
    const updatedFilters = parsedFilters.filter(
      (f) => f.questionId !== questionId,
    );
    setParsedFilters(updatedFilters);

    // Rebuild query string
    const newQuery = updatedFilters
      .map((f) => {
        const question = questions.find((q) => q.id === f.questionId);
        const values = f.values
          .map((v) => (v.includes(" ") ? `"${v}"` : v))
          .join(",");
        return `Q${question?.qorder}:${values}`;
      })
      .join(" ");
    setFilterQuery(newQuery);
  };

  const clearAllFilters = () => {
    setFilterQuery("");
    setParsedFilters([]);
  };

  const exportFilteredResults = () => {
    if (!analyticsData || !questions) return;

    const headers = [
      "User ID",
      "Submitted At",
      ...questions.map((q) => q.questionTitle || `Question ${q.id}`),
    ];

    const rows = filteredSubmissions.map((submission) => {
      const row = [
        submission.userId,
        new Date(submission.submittedAt).toLocaleString(),
        ...questions.map((q) => {
          const answer = submission.answers.find((a) => a.questionId === q.id);
          return answer?.answer || "";
        }),
      ];
      return row;
    });

    const csvContent = [
      headers.join(","),
      ...rows.map((row) => row.map((cell) => ``${cell}``).join(`,`)),
    ].join("\n");

    const blob = new Blob([csvContent], { type: "text/csv" });
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement("a");
    a.href = url;
    a.download = `${analyticsData.form.name}_filtered_${filteredSubmissions.length}_results.csv`;
    a.click();
    window.URL.revokeObjectURL(url);
  };

  const addQuickFilter = (questionOrder: number, value: string) => {
    const newFilter = `Q${questionOrder}:${value.includes(` `) ? ``${value}`` : value}`;
    const updatedQuery = filterQuery
      ? `${filterQuery} ${newFilter}`
      : newFilter;
    handleFilterChange(updatedQuery);
  };

  if (isLoading) {
    return (
      <div className="min-h-screen bg-gray-50 flex items-center justify-center">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-red-600 mx-auto mb-4"></div>
          <p className="text-gray-600">Loading advanced analytics...</p>
        </div>
      </div>
    );
  }

  if (!currentUser || !analyticsData) {
    return null;
  }

  return (
    <RequireRole
      userRoles={currentUser.roles}
      requiredRole="analytics"
      redirectTo="/"
    >
      <AdminLayout
        user={currentUser}
        title={`Advanced Analytics - ${analyticsData.form.name}`}
        subtitle="Filter and analyze form responses with advanced queries"
      >
        <div className="p-6">
          {/* Back Button */}
          <button
            onClick={() =>
              navigate({
                to: "/analytics/$analyticsId",
                params: { analyticsId },
              })
            }
            className="inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 mb-6 transition-colors"
          >
            <ArrowLeft className="w-4 h-4" />
            Back to Standard Analytics
          </button>

          {/* Filter Bar */}
          <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
            <div className="flex items-start gap-4">
              <div className="flex-1">
                <label className="block text-sm font-semibold text-gray-700 mb-2">
                  Filter Query
                </label>
                <div className="relative">
                  <Search className="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" />
                  <input
                    type="text"
                    value={filterQuery}
                    onChange={(e) => handleFilterChange(e.target.value)}
                    placeholder="e.g., Q1:Engineering Q2:6hours or Q1:1,2,3"
                    className="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 font-mono text-sm"
                  />
                </div>
                <p className="mt-2 text-xs text-gray-500">
                  Use Q[number]:[value] format. Separate multiple values with
                  commas. Use quotes for multi-word values.
                </p>
              </div>
              <div className="flex gap-2 mt-7">
                <button
                  onClick={() => setShowHelp(!showHelp)}
                  className="px-4 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-colors"
                  title="Show help"
                >
                  <Info className="w-5 h-5" />
                </button>
                {parsedFilters.length > 0 && (
                  <button
                    onClick={clearAllFilters}
                    className="px-4 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-colors"
                    title="Clear all filters"
                  >
                    <X className="w-5 h-5" />
                  </button>
                )}
              </div>
            </div>

            {/* Help Panel */}
            {showHelp && (
              <div className="mt-4 p-4 bg-blue-50 border border-blue-200 rounded-lg">
                <h4 className="font-semibold text-blue-900 mb-2">
                  Query Syntax
                </h4>
                <div className="space-y-2 text-sm text-blue-800">
                  <p>
                    <code className="bg-blue-100 px-1 rounded">
                      Q1:Engineering
                    </code>{" "}
                    - Filter by single value
                  </p>
                  <p>
                    <code className="bg-blue-100 px-1 rounded">Q2:1,2,3</code> -
                    Multiple values (OR within question)
                  </p>
                  <p>
                    <code className="bg-blue-100 px-1 rounded">
                      Q3:"Computer Science"
                    </code>{" "}
                    - Multi-word values
                  </p>
                  <p>
                    <code className="bg-blue-100 px-1 rounded">
                      Q1:Engineering Q2:6hours
                    </code>{" "}
                    - Multiple questions (AND between questions)
                  </p>
                </div>
                <div className="mt-3 pt-3 border-t border-blue-200">
                  <h5 className="font-semibold text-blue-900 mb-1">
                    Available Questions:
                  </h5>
                  <div className="space-y-1">
                    {questions.map((q) => (
                      <p key={q.id} className="text-sm text-blue-800">
                        <code className="bg-blue-100 px-1 rounded">
                          Q{q.qorder}
                        </code>
                        : {q.questionTitle || `Question ${q.qorder}`} (
                        {q.questionType})
                      </p>
                    ))}
                  </div>
                </div>
              </div>
            )}

            {/* Active Filters */}
            {parsedFilters.length > 0 && (
              <div className="mt-4">
                <p className="text-sm font-semibold text-gray-700 mb-2">
                  Active Filters:
                </p>
                <div className="flex flex-wrap gap-2">
                  {parsedFilters.map((filter) => (
                    <div
                      key={filter.questionId}
                      className="inline-flex items-center gap-2 px-3 py-1.5 bg-red-100 text-red-800 rounded-lg text-sm font-medium"
                    >
                      <Filter className="w-4 h-4" />
                      <span>
                        {filter.questionTitle}: {filter.values.join(", ")}
                      </span>
                      <button
                        onClick={() => clearFilter(filter.questionId)}
                        className="hover:bg-red-200 rounded p-0.5 transition-colors"
                      >
                        <X className="w-4 h-4" />
                      </button>
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>

          {/* Results Summary */}
          <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
            <div className="flex items-center justify-between">
              <div className="flex items-center gap-4">
                <div>
                  <p className="text-sm text-gray-600">Showing Results</p>
                  <p className="text-3xl font-bold text-gray-900">
                    {filteredSubmissions.length}
                    <span className="text-lg text-gray-500 ml-2">
                      / {analyticsData.totalSubmissions}
                    </span>
                  </p>
                </div>
                {parsedFilters.length > 0 && (
                  <div className="flex items-center gap-2">
                    {filteredSubmissions.length > 0 ? (
                      <CheckCircle2 className="w-6 h-6 text-green-600" />
                    ) : (
                      <AlertCircle className="w-6 h-6 text-yellow-600" />
                    )}
                  </div>
                )}
              </div>
              <button
                onClick={exportFilteredResults}
                disabled={filteredSubmissions.length === 0}
                className={`flex items-center gap-2 px-4 py-2 font-semibold rounded-lg transition-colors ${
                  filteredSubmissions.length > 0
                    ? "bg-gray-900 hover:bg-gray-800 text-white"
                    : "bg-gray-300 text-gray-500 cursor-not-allowed"
                }`}
              >
                <Download className="w-4 h-4" />
                Export Results
              </button>
            </div>
          </div>

          {/* Results Table */}
          <div className="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
            <div className="overflow-x-auto">
              <table className="w-full">
                <thead className="bg-gray-50 border-b border-gray-200">
                  <tr>
                    <th className="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase sticky left-0 bg-gray-50">
                      User ID
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">
                      Submitted At
                    </th>
                    {questions.map((question) => (
                      <th
                        key={question.id}
                        className="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase"
                      >
                        <div className="flex flex-col gap-1">
                          <span>Q{question.qorder}</span>
                          <span className="text-gray-500 font-normal normal-case text-xs">
                            {question.questionTitle ||
                              `Question ${question.qorder}`}
                          </span>
                        </div>
                      </th>
                    ))}
                  </tr>
                </thead>
                <tbody className="divide-y divide-gray-200">
                  {filteredSubmissions.map((submission, index) => (
                    <tr key={index} className="hover:bg-gray-50">
                      <td className="px-6 py-4 text-sm text-gray-900 font-medium sticky left-0 bg-white">
                        {submission.userId}
                      </td>
                      <td className="px-6 py-4 text-sm text-gray-600 whitespace-nowrap">
                        {new Date(submission.submittedAt).toLocaleString()}
                      </td>
                      {questions.map((question) => {
                        const answer = submission.answers.find(
                          (a) => a.questionId === question.id,
                        );
                        const answerValue = answer?.answer || "-";

                        return (
                          <td
                            key={question.id}
                            className="px-6 py-4 text-sm text-gray-700"
                          >
                            <div className="flex items-center justify-between gap-2">
                              <span className="flex-1">{answerValue}</span>
                              {answerValue !== "-" && (
                                <button
                                  onClick={() =>
                                    addQuickFilter(question.qorder, answerValue)
                                  }
                                  className="opacity-0 group-hover:opacity-100 hover:bg-gray-200 p-1 rounded transition-all text-xs text-gray-500 hover:text-gray-700"
                                  title="Add as filter"
                                >
                                  <Filter className="w-3 h-3" />
                                </button>
                              )}
                            </div>
                          </td>
                        );
                      })}
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>

            {filteredSubmissions.length === 0 && (
              <div className="p-12 text-center">
                <Users className="w-16 h-16 text-gray-300 mx-auto mb-4" />
                <h3 className="text-lg font-semibold text-gray-900 mb-2">
                  {parsedFilters.length > 0
                    ? "No matching results"
                    : "No submissions yet"}
                </h3>
                <p className="text-gray-600">
                  {parsedFilters.length > 0
                    ? "Try adjusting your filters to see more results."
                    : "Responses will appear here once users start submitting the form."}
                </p>
              </div>
            )}
          </div>
        </div>
      </AdminLayout>
    </RequireRole>
  );
}

function AdvancedAnalyticsPage() {
  return (
    <ProtectedTeamPortal>
      <AdvancedAnalyticsPageContent />
    </ProtectedTeamPortal>
  );
}

export const Route = createFileRoute("/analytics/$analyticsId/advanced/advanced")({
  component: AdvancedAnalyticsPage,
});
