{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "outDir": "./dist/server",
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/server/**/*",
    "../db/src/**/*",
    "../config/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/app",
    "src/components"
  ]
}
